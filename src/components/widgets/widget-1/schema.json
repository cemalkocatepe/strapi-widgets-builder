{
  "settings": {
    "widgetName": {
      "type": "input",
      "require": true
    },
    "displayOnWeb": {
      "type": "switch"
    },
    "displayOnMobile": {
      "type": "switch"
    },
    "displayOnApp": {
      "type": "switch"
    },
    "startedAt": {
      "type": "input"
    },
    "endedAt": {
      "type": "input"
    }
  },
  "content": {
    "widgetAnalyticsName": {
      "type": "input"
    },
    "title": {
      "type": "input",
      "require": true
    },
    "text": {
      "type": "textarea",
      "require": true
    },
    "backgroundColor": {
      "type": "color",
      "value": "#ffffff",
      "require": true
    },
    "items": {
      "type": "array",
      "fields": {
        "url": {
          "type": "input",
          "require": true
        },
        "image": {
          "type": "image",
          "require": true
        }
      }
    }
  }
}
